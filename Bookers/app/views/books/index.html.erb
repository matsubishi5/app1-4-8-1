<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
		</tr>
	</thead>

	<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><p><%= book.title %></p></td>
					<td><p><%= book.body %></p></td>

					<td><%= link_to "Show",book_path(book) %></td>
					<td><%= link_to "Edit",edit_book_path(book) %></td>
					<td><%= link_to "Destroy",book_path(book),method: :delete,'data-confirm' => 'Are you sure?' %></td>
				</tr>
			<% end %>
	</tbody>
</table>


<h2>New Book</h2>

<%= form_for(@book,url:'/books') do |f| %>
	<% if @book.errors.any? %>
  		<div>
 			<ul>
    			<% @book.errors.full_messages.each do |msg| %>
      			<li><%= msg %></li>
    			<% end %>
   			</ul>
  		</div>
	<% end %>
	<h6>Title</h6>
	<%= f.text_field :title %>

	<h6>Body</h6>
	<%= f.text_area :body %>

	<p><%= f.submit 'Create Book' %></p>

<% end %>