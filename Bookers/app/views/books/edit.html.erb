<h1>Editing Book</h1>

<%= form_for(@book,url:"/books/#{@book.id}") do |f| %>
	<% if @book.errors.any? %>
  		<div>
 			<ul>
    			<% @book.errors.full_messages.each do |msg| %>
      			<li><%= msg %></li>
    			<% end %>
   			</ul>
  		</div>
	<% end %>

	<h6>Title</h6>
	<%= f.text_field :title %>

	<h6>Body</h6>
	<%= f.text_area :body %>

	<p><%= f.submit 'Update Book' %></p>

<% end %>

<%= link_to "Show",book_path(@book) %>
